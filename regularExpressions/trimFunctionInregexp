    const trim = (string) => {
   
    const pattern = /(^\s+)|(\s{2,})|(\s+$)/g;
    const result = string.replace(pattern,(match,m1,m2,m3) => {
     
      
      if (m2) {
        return ' ' 
      }else {
        return '';
      }

    
    })
    
    return result;

    }
